	double pi = 3.14;
	//1
	cout << "1)";
	cout<<pi << endl;
	//2
	cout << "2)";
	cout << " 1 " << "13 " << "49" << endl;
	//3
	cout << "3)";
	cin >> a;
	cout << " 1 " << a << " 13 " << a << " 49 " << a << endl;
	//4
	cout << "4)";
	cout << "2  " << "55  " << "90" << endl;
	//5
	cout << "5)";
	cin >> a;
	x = 12 * a*a + 7 * a - 12;
	y = 3 * x*x*x + 4 * x*x - 11 * x + 1;
	cout << " x=" << x << endl;
	cout << "y=" << y << endl;
	//6
	double v, m, p;
	cout << "6)";
	    cout << "v=";
		cin >> v;
		cout << "m=";
		cin >> m;
		p = m*v;
	cout << "p=" << p << endl;
	//7
	cout << "7)";
	cout << "a=";
	cin >> a;
	if (a = 0) { cout << "error"<<endl; 
	}
	else
    {
		cout << "b=";
		cin >> b;
		b = -b;
		x = b/a;
		cout << "x=" << x << endl;
	}
	//8
	double x1, x2, y1, y2;
	cout << "8)";
	cout << "coordinates A=";
	cin >> x1 >> y1;
	cout << "coordinates B=";
	cin>> x2>> y2;
	x = sqrt((x2 - x1)*(x2 - x1) + (y2 - y1)*(y2 - y1));
	cout << "x=" << x << endl;
	//9
	double h, s; 
	cout << "9)";
	cout << "h=";
	cin >> h;
	cout << "a=";
	cin >> a;
	s = (h*a) / 2;
	cout << "s=" << s << endl;
	//10
	double r, R;
	cout << "10)";
	cout << "R=";
	cin >> R;
	cout << "r=";
	cin >> r;
	s = 3.14*(R*R - r*r);
	cout << "s=" << s<< endl;
	//11
	cout << "11)";
	cout << "a=";
	cin >> a;
	s = 4 * a*a;
	v = a*a*a;
	cout << "s="<<s<< endl;
	cout << "v="<<v<< endl; 
	//12
	cout << "12)";
	cout << "a=";
	cin >> a;
	p = 2 * a;
	cout << "p=" << p << endl;
	//13
	double d;
	cout << "13)";
	cout << "r=";
	cin >> r;
	d = 2 * r;
	cout << "d=" << d << endl;
